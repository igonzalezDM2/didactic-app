<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@drawable/cocinar_fondo"
    tools:context=".CocinarActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:layout_gravity="center"
        android:id="@+id/parrilla"
        android:layout_alignParentTop="true"
        android:src="@drawable/parrilla_vacia"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:gravity="center"
        app:cardCornerRadius="20sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTemporizador"
                android:textColor="@color/blue"
                android:textSize="30dp"/>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:id="@+id/tvInstrucciones"
                android:text="Sardina parrillan ipini!"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="300sp"
        android:layout_height="5sp"
        android:layout_marginTop="160sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvReferencia"
        />

    <ImageView
        android:id="@+id/plato"
        android:layout_width="250sp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/plato" />

    <View
        android:layout_width="5sp"
        android:layout_height="5sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="90sp"
        android:layout_marginRight="120sp"
        android:id="@+id/vReferenciaPlato"
        />

    <ImageView
        android:id="@+id/sardina1"
        android:layout_width="200sp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/sardina" />

</RelativeLayout>
