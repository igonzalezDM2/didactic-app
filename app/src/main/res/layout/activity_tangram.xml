<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TangramActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/marcoZone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo"
                android:textSize="36sp"
                android:layout_marginBottom="25dp"
                android:textColor="@android:color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/marco1"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@drawable/marco_1t" />

                <ImageView
                    android:id="@+id/marco2"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="-53dp"
                    android:layout_toRightOf="@id/marco1"
                    android:background="@drawable/marco_2t" />

                <ImageView
                    android:id="@+id/marco3"
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="-52dp"
                    android:layout_toRightOf="@id/marco2"
                    android:background="@drawable/marco_3t" />

                <ImageView
                    android:id="@+id/marco4"
                    android:layout_width="101dp"
                    android:layout_height="159dp"
                    android:layout_marginLeft="-101dp"
                    android:layout_toRightOf="@id/marco3"
                    android:background="@drawable/marco_4t" />

                <ImageView
                    android:id="@+id/marco5"
                    android:layout_width="52dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="-42dp"
                    android:layout_below="@id/marco1"
                    android:background="@drawable/marco_5t" />

                <ImageView
                    android:id="@+id/marco6"
                    android:layout_width="53dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="-41dp"
                    android:layout_marginLeft="-5dp"
                    android:layout_toRightOf="@id/marco5"
                    android:layout_below="@id/marco2"
                    android:background="@drawable/marco_6t" />

                <ImageView
                    android:id="@+id/marco7"
                    android:layout_width="196dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="37dp"
                    android:layout_marginLeft="-101dp"
                    android:layout_toRightOf="@id/marco6"
                    android:layout_below="@id/marco3"
                    android:background="@drawable/marco_7t" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/puzzleZone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="23sp"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/puzzle3x2p4"
                    android:layout_width="125dp"
                    android:layout_height="89dp"
                    android:src="@drawable/puzzle3x2p4" />

                <ImageView
                    android:id="@+id/puzzle3x2p1"
                    android:layout_width="100dp"
                    android:layout_height="117dp"
                    android:src="@drawable/puzzle3x2p1" />

                <ImageView
                    android:id="@+id/puzzle3x2p3"
                    android:layout_width="100dp"
                    android:layout_height="116dp"
                    android:src="@drawable/puzzle3x2p3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/puzzle3x2p2"
                    android:layout_width="145dp"
                    android:layout_height="93dp"

                    android:src="@drawable/puzzle3x2p2" />

                <ImageView
                    android:id="@+id/puzzle3x2p6"
                    android:layout_width="123dp"
                    android:layout_height="89dp"

                    android:src="@drawable/puzzle3x2p6" />

                <ImageView
                    android:id="@+id/puzzle3x2p5"
                    android:layout_width="96dp"
                    android:layout_height="112dp"
                    android:src="@drawable/puzzle3x2p5" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>